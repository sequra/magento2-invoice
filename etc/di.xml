<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="SequraInvoiceConfig" type="Sequra\Core\Model\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Sequra\Invoice\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>
    <type name="Sequra\Invoice\Block\Widget\Teaser">
        <arguments>
            <argument name="config" xsi:type="object">SequraInvoiceConfig</argument>
        </arguments>
    </type>

    <!-- Payment Method Facade configuration -->
    <virtualType name="SequraInvoiceGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Sequra\Invoice\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <!--<argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Transparent\Form</argument>-->
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\ConfigurableInfo</argument>
            <argument name="valueHandlerPool" xsi:type="object">SequraInvoiceGatewayValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">SequraInvoiceValidatorPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="SequraInvoiceGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Sequra\Invoice\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="SequraInvoiceGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SequraInvoiceGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SequraInvoiceGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">SequraInvoiceGatewayConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="SequraInvoiceCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">SequraInvoiceGatewayConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="SequraInvoiceValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">SequraInvoiceCountryValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Sequra\Invoice\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">SequraInvoiceGatewayConfig</argument>
        </arguments>
    </type>
</config>
