<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <group id="sequra" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <group id="invoice" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Compra primero, paga después</label>
                    <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <config_path>payment/sequra_invoice/active</config_path>
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1"  canRestore="1">
                        <label>Title</label>
                        <config_path>payment/sequra_invoice/title</config_path>
                    </field>
                    <field id="showlogo" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <config_path>payment/sequra_invoice/showlogo</config_path>
                        <label>Show logo</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="max_order_total" translate="label" type="text" sortOrder="30" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <config_path>payment/sequra_invoice/max_order_total</config_path>
                        <label>Max order amount</label>
                        <frontend_class>validate-number</frontend_class>
                    </field>
                    <!--<field id="min_order_total" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Min order amount</label>
                        <frontend_class>validate-number</frontend_class>
                    </field>-->
                    <field id="allowspecific" translate="label" type="allowspecific" sortOrder="140" showInDefault="0"
       showInWebsite="0" showInStore="">
                        <config_path>payment/sequra_invoice/allowspecific</config_path>
                        <label>Payment From Applicable Countries</label>
                        <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                    </field>
                    <field id="specificcountry" translate="label" type="multiselect" sortOrder="150" showInDefault="0"
                           showInWebsite="0" showInStore="">
                        <config_path>payment/sequra_invoice/specificcountry</config_path>
                        <label>Payment From Specific Countries</label>
                        <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
